<Window x:Class="Host_WPF.MainWindow_WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Host_WPF"
        mc:Ignorable="d"
        Title="MainWindow_WPF" Height="600" Width="800">
    <Grid>
        <!-- Hosting a WindowsForms control is necessary to expose a handle which can be passed to the native SFML app -->
        <WindowsFormsHost Height="480" Width="640" x:Name="WinFormHost" />
    </Grid>
</Window>
